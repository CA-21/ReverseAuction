<h1>New Question</h1>

<%= form_for :question, url: questions_path do |f| %>
    <p>
      <%= f.label :title %>
      <%= f.text_field :title %>
    </p>

    <p>
      <%= f.label :content %>
      <%= f.text_area :content %>
    </p>

    <p>
      <%= f.label :city %>
      <%= f.text_field :city %>
    </p>

    <p>
      <%= f.label :email %>
      <%= f.text_area :email %>
    </p>

    <p>
      <%= f.label :phone %>
      <%= f.text_area :phone %>
    </p>

    <p>
      <%= f.submit %>
    </p>
<% end %>

<%= link_to 'Back', questions_path %>