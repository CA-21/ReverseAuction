<p>
  <h4>Question ID: <strong><%= @question.id %></strong></h4>
</p>
<h2 id="title">
   <%= @question.title %>
</h2>
<p>
    Content: <%= @question.content %>
</p>

<div class="row">
  <div class="col-sm-6 col-sm-offset-5"><h1>Answers</h1></div>
</div>
<div class="row">
  <div class="col-md-12"><%= render @question.answers %></div>
</div>

<% if lawyer_signed_in? %>
    <div class="row">
      <div class="col-md-6 col-md-offset-3"><%= render 'answers/form' %></div>
    </div>
<% end %>