<h1>Questions</h1>
<div class="row">
<div class="col-md-8">
  <% @questions.each do |question| %>
    <div class="row">
        <div class="col-md-3">
          <p>Question ID: <%= question.id %></p>
        </div>
        <div class="col-md-6 col-md-offset-1"><%= question.title %></div>
        <div class="col-md-2"><%= link_to 'View', question_path(question), class:'btn btn-default btn-xs' %></div>
    </div>
<% end %>
  <div class="btn-toolbar" role="toolbar">
    <%= will_paginate @questions %>
  </div>
<%= link_to 'Submit your question', new_question_path %>
</div>
</div>