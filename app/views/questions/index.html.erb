<div class="row">
  <div class="col-xs-4 col-xs-offset-5">
    <h1>Questions</h1>
    <p><%= link_to 'Submit your question', new_question_path, class:'btn btn-large btn-info' %></p>
  </div>
</div>
<hr />
<div class="row">
  <% @questions.each do |question| %>
    <div class="row">
        <div class="col-xs-2">
          <p>Question ID: <%= question.id %></p>
        </div>
        <div class="col-xs-7 col-xs-offset-1"><%= question.title %></div>
        <div class="col-xs-2">
          <%= link_to 'View', question_path(question), class:'btn btn-primary btn-xs' %>
        </div>
    </div>
<% end %>
  <div class="col-xs-5 col-xs-offset-5">
    <%= will_paginate @questions %>
  </div>


</div>